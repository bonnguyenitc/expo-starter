{
  "extends": [
    "airbnb",
    "airbnb/hooks",
    "airbnb-typescript",
    "plugin:react/recommended",
    "prettier",
  ],
  "plugins": ["react", "react-native", "import"],
  "parserOptions": {
    "project": "./tsconfig.json",
    "ecmaFeatures": {
      "jsx": true,
    },
  },
  "rules": {
    "react/style-prop-object": "off",
    "react/react-in-jsx-scope": "off",
    "import/no-cycle": "off",
    "import/order": "error",
  },
  "env": {
    "react-native/react-native": true,
  },
}
